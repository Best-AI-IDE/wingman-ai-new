{
	"name": "code-assistant",
	"displayName": "code-assistant",
	"description": "Write the best code, ever.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.84.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "code-assistant.helloWorld",
				"title": "Hello World"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "code-assistant",
					"title": "Code Assistant",
					"icon": "$(heart)"
				}
			]
		},
		"views": {
			"code-assistant": [
				{
					"id": "code-assistant-chat-view",
					"name": "Let the code begin!",
					"type": "webview"
				}
			]
		}
	},
	"scripts": {
		"wasm": "wasm-pack build ./llm_wasm --target web",
		"vscode:prepublish": "pnpm run compile",
		"start:webview": "cd webview-ui && npm run start",
		"build:webview": "cd webview-ui && npm run build",
		"compile": "vite build",
		"watch": "vite build --watch",
		"package": "vite build --mode production",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.84.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/react": "18.2.42",
		"@types/react-dom": "18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"@types/vscode-webview": "1.57.4",
		"eslint": "^8.54.0",
		"typescript": "^5.3.2",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8",
		"vite": "5.0.6",
		"vite-plugin-static-copy": "1.0.0",
		"@vscode/webview-ui-toolkit": "1.3.1",
		"vite-plugin-wasm-pack": "0.1.12",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"styled-components": "6.1.1"
	}
}
