{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"paths": {
			"@shared/*": ["./shared/src/*"]
		}
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		".vscode-test",
		"webview-ui",
		"configview-ui",
		"shared"
	],
	"references": [{ "path": "./shared" }]
}
