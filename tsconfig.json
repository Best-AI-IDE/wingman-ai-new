{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "out",
		"lib": ["dom", "dom.iterable", "esnext"],
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
