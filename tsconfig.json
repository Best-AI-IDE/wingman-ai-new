{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"module": "commonjs",
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"paths": {
			"@shared/*": ["./shared/src/*"]
		}
	},
	"include": [
		"src",
		"./node_modules/vscode/vscode.d.ts",
		"./node_modules/vscode/lib/*"
	],
	"exclude": ["node_modules", ".vscode-test"],
	"references": [{ "path": "./shared" }]
}
